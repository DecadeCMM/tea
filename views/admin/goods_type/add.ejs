<!DOCTYPE html>
<html lang="en">
<head>
		<% include ../../layout/admin/header  %>
	<title>商品分类新增</title>
</head>
<body class="gray-bg">
	<div class="container wrapper wrapper-content animated fadeInRight">
		<!-- bs3-panel:danger 生成一个面板 红色头部的 -->
		<div class="panel panel-danger">
				<div class="panel-heading">
					<h3 class="panel-title">商品分类新增</h3>
				</div>
				<div class="panel-body">
					<!-- bs3-form 生成一个表单 -->
					<% if(isEditor){ %>
						<form method="POST" action="/admin/goods_type/editor/<%= model.id %>" role="form">
						<%} else{%>
						<form method="POST" role="form">
						<%} %>
						<div class="form-group">
							<label>名字</label>
							<input name="name" value="<%= model.name%>" type="text" class="form-control" placeholder="请输入列名">
						</div>
						<div class="form-group">
							<label>描述</label>
							<textarea name="description" class="form-control" cols="30" rows="10"><%= model.description%></textarea>
						</div>
						<button type="submit" class="btn btn-block btn-primary">保存</button>
					</form>
				</div>
		</div>
	</div>
	<% include ../../layout/admin/footer  %>
</body>
</html>