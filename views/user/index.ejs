<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>座次表</title>
	<link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<link rel="stylesheet" href="/admin/css/style.css">
	<style>
		.table td{
			text-align: center;
		}
		.table th{
			text-align: center;
		}
	</style>
</head>
<body>
	<div class="container">
		<div class="panel panel-info">
				<div class="panel-heading">
					<h3 class="panel-title">座次表</h3>
				</div>
				<div class="panel-body">
					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>排/号</th>
								<% colList.forEach(function(c){%>
								<th><%= c.name %></th>
								<%}) %>
							</tr>
						</thead>
						<tbody>
							<% rowList.forEach(function(r){%>
							<tr>
								<td><%= r.name %></td>
								<% colList.forEach(function(c){%>
								<% const temUser = users.find(u=>{
									return u.row_id==r.id && u.col_id==c.id
								});
								let isGirl = false;
								if(temUser){
									isGirl = temUser.gender=='女'?true:false;
								}
								 %>
								<td class="<%= isGirl?'alert alert-danger':''%>"><%= temUser?temUser.name:'' %></td>
								<%}) %>
							</tr>
							<%}) %>
						</tbody>
					</table>
				</div>
		</div>
	</div>
</body>
</html>